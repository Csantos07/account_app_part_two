<h1>Forecast Estimate</h1>

<div class="flex-box">
  <div class="card">
      <div class="card-body">
        <h3 class="card-title"><%= @transaction.name %>: <%= number_to_currency(@transaction.balance) %></h5>
        <h5 class="card-title">Transaction Date: <%= @transaction.date.strftime('%m/%d/%Y') %></h5>
        <h5 class="card-title">Forecast Date <%= @date_to_forecast.strftime('%m/%d/%Y') %></h5>
        <h5 class="card-title">Current Date: <%= Date.today.strftime('%m/%d/%Y') %></h5>


        <p class="card-text"> Account Current Balance: <%= number_to_currency(@account_to_forecast.balance) %></p>
        <p class="card-text">Account Balance on Forecast: <%= number_to_currency(@balance_at_forecast) %></p>
        <p class="card-text">Transaction Amount Total: <%= number_to_currency(@total_forcasted_balance) %></p>
        <p class="card-text">Transaction Count: <%= @transaction_count %></p>
      </div>
  </div>
</div>

<%= button_to "Create New transaction", new_transaction_path, method: :get %>
